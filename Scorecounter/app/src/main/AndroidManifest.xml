<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anmol.courtcounter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Real Time SCORER"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SaveResults.ResultActivity"></activity>
        <activity
            android:name=".LawnTennis.LawnTennisActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Cricket.SelectFormat"
            android:label="Cricket"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cricket.FirstTeam"
            android:label="Cricket"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Kabaddi.KabaddiActivity"
            android:label="Kabaddi"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Football.FootballActivity"
            android:label="Football"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TableTennis.TableTennisAcitivity"
            android:label="Table Tennis"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cricket.CricketActivity"
            android:label="Cricket"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Badminton.BadmintonActivity"
            android:label="Badminton"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Volleyball.VolleyballActivity"
            android:label="Volleyball"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Basketball.BasketballActivity"
            android:label="Basketball"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>